<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="kotlin.Unit"/>
        <import type="kotlin.jvm.functions.Function1"/>
        <variable
            name="networkArtObject"
            type="com.penguin.thebooklore.model.networkModel.NetworkArtObject" />

        <variable
            name="onClickListenerOpenDetailArtObject"
            type="Function1&lt;com.penguin.thebooklore.model.networkModel.NetworkArtObject, Unit&gt;" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_item"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            android:orientation="vertical"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{() -> onClickListenerOpenDetailArtObject.invoke(networkArtObject)}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:insertFromUrl="@{networkArtObject.hasImage == true ? networkArtObject.networkWebImage.url : @string/message_no_artwork_url}"
                    android:scaleType="centerCrop" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{networkArtObject.title != null ? networkArtObject.title : @string/message_no_artwork_title}"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/card_view_item"
            app:layout_constraintStart_toStartOf="@id/card_view_item"
            app:layout_constraintTop_toBottomOf="@id/card_view_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>